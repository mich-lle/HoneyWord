<resources>
    <style name="Theme.Honeyword" parent="Theme.Material3.DayNight">
        <!-- Brand palette for system/Views -->
        <item name="colorPrimary">@color/star_blue</item>
        <item name="colorSecondary">@color/star_purple</item>
        <item name="colorTertiary">@color/star_purple</item>
        <item name="colorBackground">@color/star_background</item>
        <item name="colorSurface">@color/star_surface</item>

        <!-- No action bar / edge-to-edge-ish -->
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowActionBar">false</item>
        <item name="android:statusBarColor">@android:color/transparent</item>
        <item name="android:navigationBarColor">@android:color/transparent</item>
        <item name="android:windowLightStatusBar">true</item>
    </style>
</resources>
